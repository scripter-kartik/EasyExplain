{
    "manifest_version": 3,
    "name": "EasyExplain",
    "description": "Select text and get a simple explanation instantly.",
    "version": "1.0",
    "icons": {
        "128": "icons/icon128.png"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "data_collection_permissions": "none"
        }
    }
}